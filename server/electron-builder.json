{
    "appId": "Dashboard",
    "productName": "VizInpect_Dashboard",
    "copyright": "NFPTC PVT. LTD.",
    "directories": {
        "app": ".",
        "output": "out",
        "buildResources": "build-res"
    },
    "files": [
        "package.json",
        "server/**/*",
        "node_modules"
    ],
    "dmg": {
        "background": null,
        "backgroundColor": "#ffffff",
        "window": {
            "width": "400",
            "height": "300"
        },
        "contents": [
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "mac": {
        "target": "dmg",
        "category": "public.app-category.utilities"
      },
    "win": {
        "target": "nsis",
        "icon": "Assets/icons/nfpc2.ico"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    }
}